if(e==random.randint(1,10)):
    print("You got it correct! You just earned " + str(random.randint(1,10)) + " extra credit points! :D")
else:
    print("You lost the chance to earn " + str(random.randint(1,10)) + " extra credit points! :(")
    print("\n")
